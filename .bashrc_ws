### .bashrc_ws
# vim: set filetype=sh :

# William Stark (william.stark.5000@gmail.com)


export SOFTWARE_DIRECTORY="$HOME/data/software"


### Python pyenv
[[ -d "$HOME/.pyenv" ]] && export PYENV_ROOT="$HOME/.pyenv"
[[ -d "/data/.pyenv" ]] && export PYENV_ROOT="/data/.pyenv"

### Rust
# https://www.rust-lang.org/
[[ -d "$HOME/.rustup" ]] && export RUSTUP_HOME="$HOME/.rustup"
[[ -d "$HOME/.cargo" ]] && export CARGO_HOME="$HOME/.cargo"
[[ -d "$CARGO_HOME/bin" ]] && export PATH="$CARGO_HOME/bin:$PATH"

### Node.js nvm
[[ -d "$HOME/.nvm" ]] && export NVM_DIR="$HOME/.nvm"

### Java jenv
[[ -d "$HOME/.jenv" ]] && export JENV_ROOT="$HOME/.jenv"
